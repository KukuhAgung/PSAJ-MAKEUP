generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pelanggan {
  id_pelanggan String   @id @default(uuid())
  nama         String
  email        String   @unique
  telepon      String   @unique
  alamat       String
  transaksi    Transaksi[]
}

model Produk {
  id_produk   String   @id @default(uuid())
  nama_produk String
  harga       Decimal
  stok        Int
  deskripsi   String?
  transaksi   Transaksi[]
}

model Transaksi {
  id_transaksi  String   @id @default(uuid())
  id_pelanggan  String
  id_produk     String
  tanggal       DateTime @default(now())
  total_harga   Decimal

  pelanggan  Pelanggan @relation(fields: [id_pelanggan], references: [id_pelanggan], onDelete: Cascade)
  produk     Produk    @relation(fields: [id_produk], references: [id_produk], onDelete: Cascade)
}
